%table.table.table-striped
  %tbody
    - movies.each_with_index do |movie, i|
      %tr
        %td= i + 1
        %td
          = render_async movie_poster_path(movie), retry_count: 2, error_message: t("errors.movie_poster_fail")
        %td
          %h4
            = link_to movie.title, movie_path(movie)
          %p
            %strong
              = link_to movie.genre.name, movies_genre_path(movie.genre)
            = ' (' + movie.released_at.to_s + ')'
          %p
            = movie.description
            = render_async movie_data_path(movie), retry_count: 2, error_message: t("errors.movie_data_fail")
